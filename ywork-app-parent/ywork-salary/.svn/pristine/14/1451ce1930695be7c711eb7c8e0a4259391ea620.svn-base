package me.ywork.salary.repository;

import java.util.Date;
import java.util.List;

import org.apache.ibatis.annotations.Param;
import org.springframework.stereotype.Repository;
import me.ywork.base.repository.IRepository;
import me.ywork.page.Pageable;
import me.ywork.salary.entity.AttendanceEntity;
import me.ywork.salary.model.AttendanceModel;
import me.ywork.salary.model.StaffAttendanceModel;

@Repository
public interface AttendanceRepository extends IRepository<AttendanceEntity> {
	/**
	 * 获取所有月份考勤:返回所有月份的的考勤数据
	 * 
	 * @param corpId
	 *            钉钉企业号
	 * @param pageable
	 *            分页的pageable
	 * @return 得到分页的结果
	 */
	List<AttendanceModel> getAllMonthesAttendanceData(@Param("corpId") String corpId,
			@Param("pageable") Pageable pageable);

	/**
	 * 查询企业考勤表的总数
	 * 
	 * @param corpId
	 *            钉钉企业号
	 * @return 查询考勤总数的结果
	 */
	Long getAttendanceDataCountByCorpId(@Param("corpId") String corpId);

	/**
	 * 获取该月人员考勤详情:根据考勤id得到该月所有员工的考勤情况
	 * 
	 * @param reportId
	 *            月度 考勤表ID
	 * @param pageable
	 *            分页的pageable
	 * @return 得到分页的结果
	 */
	List<StaffAttendanceModel> getAllStaffAttendanceByMonthId(@Param("reportId") String reportId,
			@Param("pageable") Pageable pageable);

	/**
	 * 考勤表ID来获得总数
	 * 
	 * @param corpId
	 * @param monthId
	 * @return
	 */
	Long getAllStaffAttendanceCountByMonthId(@Param("reportId") String reportId);

	/**
	 * 获取选中人员该月考勤详情(编辑考勤):管理员可以选择多个员工和该月考勤的ID来得到这些员工的考勤详情
	 * 
	 * @param staffIds
	 *            员工Id的集合
	 * @param monthId
	 *            月度考勤的标识
	 * @param corpId
	 *            钉钉企业号
	 * @return 得到选择人员的考勤的结果
	 */
	List<StaffAttendanceModel> getMutiStaffAttendanceDetail(@Param("staffIds") List<String> staffIds,
			@Param("reportId") String reportId);

	/**
	 * 修改某员工的考勤数据后可以保存到数据库
	 * 
	 * @param staffAttendances
	 *            要修改考勤的集合
	 * @return 更新的结果
	 */

	Integer updateMutiStaffAttendance(@Param("staffAttendance") StaffAttendanceModel staffAttendance);

	/**
	 * 根据员工考勤标识得到该员工的考勤数据
	 * 
	 * @param attendanceId
	 *            考勤标识的ID
	 * @return 得到员工的考勤的数据
	 */
	StaffAttendanceModel getStaffAttendanceModelById(@Param("attendanceId") String attendanceId);
}
