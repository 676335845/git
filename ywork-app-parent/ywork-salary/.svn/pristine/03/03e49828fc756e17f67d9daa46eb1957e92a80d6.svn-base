package me.ywork.salary.repository;

import java.util.Date;
import java.util.List;

import org.apache.ibatis.annotations.Param;
import org.springframework.stereotype.Repository;

import me.ywork.base.repository.IRepository;
import me.ywork.page.Pageable;
import me.ywork.salary.entity.SalReportEntity;
import me.ywork.salary.entity.SalStaffSalReportEntity;
import me.ywork.salary.model.SalStaffMonthSalReportDetailModel;
import me.ywork.salary.model.SalStaffMonthSalReportModel;
import me.ywork.salary.model.SalReportModel;
import me.ywork.salary.model.SalInfoDetailModel;

@Repository
public interface SalReportRepository extends IRepository<SalReportEntity> {
	/**
	 * 获取所有月份工资表概要:获取所有月份的工资表，分页展示
	 * 
	 * @param corpId
	 *            钉钉企业号
	 * @param pageable
	 *            分页的pageable
	 * @return 获取的月度薪资报表的集合
	 */
	List<SalReportModel> getAllSalReports(@Param("corpId") String corpId, @Param("pageable") Pageable pageable);

	/**
	 * 获取所有月份的工资表的总数
	 * 
	 * @param corpId
	 *            钉钉企业号
	 * @param pageable
	 *            分页的pageable
	 * @return 获取的月度薪资报表的总数
	 */
	Long getAllMonthSalaryiesCount(@Param("corpId") String corpId);

	/**
	 * 根据工资表ID来获得该月的工资详情
	 * 
	 * @param reportId
	 *            工资表ID
	 * @param pageable
	 *            分页的pageable
	 * @return 得到企业月度所有员工的薪资大概
	 */
	List<SalStaffMonthSalReportModel> getSalaryDatailByReportId(@Param("reportId") String reportId,
			@Param("pageable") Pageable pageable);

	/**
	 * 根据员工当月的工资ID来获得员工的工资详情
	 */
	SalStaffMonthSalReportDetailModel getSalaryDetailById(@Param("id") String id);
	
	SalStaffSalReportEntity getSalDetailEntityById(@Param("id") String id);
	

	/**
	 * 锁定该月工资表：根据工资表ID来锁定该工资表
	 * 
	 * @param corpId
	 *            钉钉企业号
	 * @param monthId
	 *            月度工资报表的ID
	 * @param reportState
	 *            工资表的状态
	 * @return 锁定的结果
	 */
	Integer lockSalReportById(@Param("reportId") String reportId, @Param("reportState") Short reportState);

	/**
	 * 获取选中人员该月工资详情(修改浮动款项):传递工资表ID和多个员工ID去返回多个员工的工资数据
	 * 
	 * @param staffids
	 *            员工ID的集合
	 * @param monthId
	 *            月度工资报表的ID
	 * @return 得到选择员工的月度薪资信息的集合
	 */
	List<SalStaffMonthSalReportDetailModel> getSelectedStaffSalaryDetail(@Param("staffIds") List<String> staffIds,
			@Param("reportId") String reportId);

	/**
	 * 具体员工的工资情况可以修改,向后台传递的是修改后的工资数据
	 * 
	 * @param monthStaffSalDetailModels
	 *            月度员工工资的数据的集合
	 * @return 得到的更新的结果
	 */
	Integer updateStaffSalOnMonth(SalStaffMonthSalReportDetailModel monthStaffSalDetailModels);
}
